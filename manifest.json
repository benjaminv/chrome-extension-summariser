{
  "manifest_version": 3,
  "name": "Page Summariser",
  "version": "0.2",
  "description": "AI-powered web page summariser",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "notifications"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": { "service_worker": "background.js" }
}
